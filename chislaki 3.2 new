#include <iostream>
#include <cmath>
using namespace std;
double Fi(double x, double exp = 2.71828)
{
    return 1 / pow(exp, x);
}
double func(double x, double exp = 2.71828)
{
    return x * (pow(exp, x)) - 1;
}
int main() {
    setlocale(0, "");
    double a, b, eps, x = 0.0;
    int count = 0;
    cout << "Начало отрезка: "; cin >> a;
    cout << "Конец отрезка: "; cin >> b;
    cout << "Точность: "; cin >> eps;
    if (func(a) * func(b) < 0)
    {
        if (func(a) * Fi(a) > 0) 
        {
            x = b;
        }
        if (func(b) * Fi(b) > 0) 
        {
            x = a;
        }
        while (true)
        {
           
            x = Fi(x); 
            count++;
            if ((func(x - eps) * func(x+ eps) < 0)) 
            {
                cout << "\nX = " << x << "\nКоличество итераций: " << count << endl;
                break;
            }
        }
        return 0;
    }
    else
    {
        cout << "Ошибка" << endl;
    }
}

