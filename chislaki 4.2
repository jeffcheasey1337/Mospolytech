#include <iostream>
#include <cmath>
using namespace std;

int main() {
    setlocale(LC_ALL, "rus");
    double x, y, x0, y0, eps=0.0001, F, G, Gx, Gy, d, dx, dy, Fx, Fy; //объявление переменных
    int count = 0;
    cout << "Начальное значение x = "; cin >> x0;
    cout << "Начальное значение y = "; cin >> y0;

    while (true) {
        count++;
        F = sin(y0 - 1) + x0 - 1.3;
        G = y0 - sin(x0 + 1) - 0.8;

        Fx = 1;
        Fy = cos(y0-1);

        Gx = -cos(x0 + 1);
        Gy = 1;

        d = Gy * Fx - Fy * Gx;

        if (d == 0) {
            cout << "Определитель не может быть равен 0!" << endl;
            break;
        }
        dx = (Fy * G - F * Gy) / d;
        dy = (F * Gx - G * Fx) / d;

        x = x0 + dx;
        y = y0 + dy;

        if (abs(x - x0) < eps || abs(y - y0) < eps) {
            cout << endl << "X = " << x << endl;
            cout << "Y = " << y << endl;
            cout << "Количество итераций: " << count;
            break;
        }
        x0 = x;
        y0 = y;
    }
}
