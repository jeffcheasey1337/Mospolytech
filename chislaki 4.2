#include <iostream>
#include <cmath>
using namespace std;

double f1(double x, double y)
{
    return cos(x - 1.0) + y - 0.5;
}
double f2(double x, double y)
{
    return x - cos(y) - 3.0;
}
double f1X(double x)
{
    return -sin(x - 1);
}
double f2Y(double y)
{
    return sin(y);
}
